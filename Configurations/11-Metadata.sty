%%% Document Settings %%%
\NewDocumentCommand{\Author}{m}{\newcommand{\GetAuthor}{#1}}
\NewDocumentCommand{\AuthorNumber}{m}{\newcommand{\GetAuthorNumber}{#1}}
\NewDocumentCommand{\AuthorEmail}{m}{\newcommand{\GetAuthorEmail}{#1}}
\NewDocumentCommand{\AuthorWebsite}{m}{\newcommand{\GetAuthorWebsite}{#1}}
\NewDocumentCommand{\Subtitle}{m}{\newcommand{\GetSubtitle}{#1}}
\NewDocumentCommand{\Degree}{m}{\newcommand{\GetDegree}{#1}}

% Redefine the commands to Pascal case.
\let\Title\title
\newcommand{\GetTitle}{\@title}
\let\Date\date
\newcommand{\GetDate}{\@date}

% Document version command.
\NewDocumentCommand{\DocumentVersion}{m}{%
    \newcommand{\GetDocumentVersion}{\color{black}{%
        \textit{Draft Version #1}
    }}%
}

% Define the PDF document metadata.
\AfterPreamble{
    \hypersetup{
        pdfauthor={\GetAuthor},
        pdftitle={\GetTitle},
        pdfproducer={LaTeX},
        pdfcreator={XeLaTeX}
    }
}